@using Ubik.Web.Auth.ViewModels
@model UserChangPasswordViewModel
<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title">Change User Password</h3>
    </div>

    @using (Html.BeginForm("ChangUserPassword", "UserAdministration", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
                                <!-- left column -->

        <div class="box-body">

            <div class="form-group hidden">
                @Html.LabelFor(m => m.UserId)
                @Html.HiddenFor(m => m.UserId, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "" })
            </div>
            <div class="form-group hidden">
                @Html.LabelFor(m => m.UserId)
                @Html.HiddenFor(m => m.UserId, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "" })
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">@Html.LabelFor(m => m.NewPassword)</span>
                    @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "" })
            </div>






        </div>
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

    }
</div>