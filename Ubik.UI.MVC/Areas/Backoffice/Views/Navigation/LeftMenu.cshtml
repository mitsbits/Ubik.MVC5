@using Ubik.Web.Backoffice
@using Ubik.Web.Infra.Navigation
@model Ubik.Web.Infra.Navigation.Contracts.IMenuProvider<Ubik.Web.Infra.Navigation.Contracts.INavigationElements<int>>
@{
    var _model = Model as BackofficeNavigationElements;
}       
<ul class="sidebar-menu">

    @foreach (var grp in Model.Raw.Select(x => x.Group).Distinct().OrderBy(x => x.Weight))
    {
        <li id="@grp.Key" class="treeview">
            <a href="#">
                <i class="@grp.IconCssClass"></i> <span>User Administration</span>

                <i class="fa fa-angle-left pull-right"></i>
            </a>
            <ul class="treeview-menu" id="@grp.Key">
                @foreach (var menuItem in Model.Menu)
                {

                    var item = menuItem as BackofficeNavigationElement;

                    if (item.Group.Key == grp.Key)
                    {

                        <li id="charts_morris"><a href="@Url.Content("~/backoffice/" + item.Href)"><i class="@item.IconCssClass"></i> @item.Display</a></li>}
                }
            </ul>
        </li>
    }

        <li id="dashboard" class="active">
            <a href="@Url.Action("Index", "Home")">
                <i class="fa fa-dashboard"></i> <span>Dashboard</span>
            </a>
        </li>
        <li id="widgets">
            <a href="@Url.Action("Widgets", "Widgets")">
                <i class="fa fa-th"></i> <span>Widgets</span> <small class="badge pull-right bg-green">new</small>
            </a>
        </li>
        <li id="charts" class="treeview">
